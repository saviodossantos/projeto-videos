<!DOCTYPE html>

<html>

<head>
    <title>StreamOn</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
</head>

<body>

    <div class="container">
        <header>
            <div class="row">
                <div class="col-sm-3">
                    <a href="../index.html">
                        <img src="../imgs/logo.jpeg" width="150">
                    </a>
                </div>
                <div class="col-sm-6">
                    <h1 class="mt-5"><i>Número 1 em streaming!</i></h1>
                </div>
                <div class="col-sm-3 mt-3 dd-flex justify-content-end">
                    <span id="bemVindo"></span>
                    <a id="entrar" href="/login" class="btn btn-danger">Entrar</a>
                    <a style="cursor:pointer;text-decoration:underline" class="btn btn-danger ml-2" id="sair">Sair</a>
                </div>
            </div>
        </header>

        <nav class="d-flex justify-content-around mb-4 mt-2">
            <a href="/" class="btn btn-dark">Início</a>
            <a href="/produtos" class="btn btn-dark">Produtos</a>
            <a href="/contato" class="btn btn-dark">Contato</a>
            <a href="/cadastro" class="btn btn-dark">Cadastre-se</a>
        </nav>

        <article>

            <div id="filmes" class="row"></div>

            <div class="row">

                <% filmes.forEach((item)=>{ %>

                    <div class="col-sm-4 mt-3">
                        <h4 class="col-sm-12">
                            <%= item.titulo%>
                                </h3>
                                <div class="row">
                                    <div class="col-sm-5 filmes">
                                        <a href="/single-produto?=<%%>"><img src="../imgs/<%= item.imagem %>"
                                                class="w-100 imagens" /></a>
                                    </div>
                                    <div class="col-sm-7">
                                        <p>Categoria: <%= item.genero %>
                                        </p>
                                        <p>Ano: <%= item.ano %>
                                        </p>
                                        <p class="sinopse">
                                            <%= item.sinopse.substring(0,100)+"..." %>
                                            <a href="carrinho/?id=<%=item.filmes_id%>" class="btn btn-primary">Adicionar ao carrinho</a>
                                        </p>
                                    </div>
                                </div>
                    </div>

                <% }) %>
            </div>

        </article>
        </section>

        <footer class="mt-5">
            <p>&copy;2022 - Todos os direitos reservados</p>
        </footer>
    </div>
</body>

<!-- <script src="../js/promocoes.js"></script> -->
<!-- <script src="../js/geral.js"></script> -->


</html>